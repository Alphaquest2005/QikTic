                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2"
                           Width="256"
                           Height="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Z Report"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="1"
                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Batch Id:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Width="150"
                           Margin="0"
                           HorizontalAlignment="Left"
                           Text="{Binding BatchId}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="2"
                           Width="107"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Opening Cashier:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="2"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="150"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding OpenCashier.DisplayName}"
                           TextWrapping="Wrap" />

                <TextBlock Grid.Row="3"
                           Width="90"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Opening Time:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="3"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="150"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding OpeningTime,
                                          StringFormat=\{0:M/d/yyyy h:mm:ss tt\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="4"
                           Width="80"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Opening Cash:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="4"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="150"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding OpeningCash,
                                          StringFormat=c}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="5"
                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Closing Time:"
                           TextWrapping="Wrap" />

                <TextBlock Grid.Row="5"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="150"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding ClosingTime,
                                          StringFormat=\{0:M/d/yyyy h:mm:ss tt\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="6"
                           Width="107"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Closing Cashier:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="6"
                           Grid.Column="1"
                           Width="150"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding CloseCashier.DisplayName}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="7"
                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           TextWrapping="Wrap"><Run Text="Ending Cash:" />
                    <LineBreak /><Run /></TextBlock>
                <TextBlock Grid.Row="7"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="150"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding EndingCashEx,
                                          StringFormat=\{0:c\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="8"
                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Sales:"
                           TextWrapping="Wrap" />
