                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="   Tickets:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="9"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="38"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding ClosedParkingTickets.Count,
                                          StringFormat=\{0:n0\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="9"
                           Grid.RowSpan="3"
                           Grid.Column="1"
                           Width="77"
                           Height="23"
                           Margin="75,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding TicketSales,
                                          StringFormat=\{0:c\}}"
                           TextWrapping="Wrap" />

                <TextBlock Grid.Row="10"
                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="   Deliveries:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="10"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="38"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding ClosedDeliveries.Count,
                                          StringFormat=\{0:n0\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="10"
                           Grid.RowSpan="3"
                           Grid.Column="1"
                           Width="77"
                           Height="23"
                           Margin="75,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding DeliverySales,
                                          StringFormat=\{0:c\}}"
                           TextWrapping="Wrap" />

                <TextBlock Grid.Row="11"
                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="   Taxi:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="11"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="38"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding Taxis.Count,
                                          StringFormat=\{0:n0\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="11"
                           Grid.RowSpan="3"
                           Grid.Column="1"
                           Width="77"
                           Height="23"
                           Margin="75,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding TaxiSales,
                                          StringFormat=\{0:c\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="12"
                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="   Lost Tickets:"
