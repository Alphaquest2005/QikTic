                <TextBlock Grid.Row="12"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="38"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding LostTickets.Count,
                                          StringFormat=\{0:n0\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="12"
                           Grid.RowSpan="3"
                           Grid.Column="1"
                           Width="77"
                           Height="23"
                           Margin="75,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding LostTicketSales,
                                          StringFormat=\{0:c\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="13"
                           Width="90"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="   Special Tickets:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="13"
                           Grid.RowSpan="2"
                           Grid.Column="1"
                           Width="38"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding SpecialTickets.Count,
                                          StringFormat=\{0:n0\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="13"
                           Grid.RowSpan="3"
                           Grid.Column="1"
                           Width="77"
                           Height="23"
                           Margin="75,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding SpecialTicketSales,
                                          StringFormat=\{0:c\}}"
