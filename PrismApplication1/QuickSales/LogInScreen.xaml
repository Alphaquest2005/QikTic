                       Margin="25,68,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="User name"
                       TextWrapping="Wrap" />
            <TextBox Width="140"
                     Height="20"
                     Margin="120,68,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Text="{Binding LoginName,
                                    UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap" />
            <TextBlock Width="75"
                       Height="20"
                       Margin="25,94,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       TextWrapping="Wrap"><Run Text="Password" />
                <LineBreak /><Run /></TextBlock>
            <TextBox Width="140"
                     Height="20"
                     Margin="120,94,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Text="{Binding SPassword,
                                    UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap" />
            <Button x:Name="SaveBtn"
                    Width="80"
                    Height="30"
                    Margin="104,129,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
