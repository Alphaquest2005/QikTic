            </Grid>
            <Button x:Name="CloseoutBtn"
                    Grid.Row="2"
                    Width="80"
                    Height="30"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
