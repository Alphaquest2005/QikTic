                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   Height="30"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   HorizontalContentAlignment="Center"
                   FontFamily="Calibri"
                   FontSize="16"
                   FontWeight="Normal"
                   Foreground="#FFD3D9EE">
                <Label.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Offset="0" Color="#FF293262" />
                        <GradientStop Offset="0.4" Color="#FF5A6DCD" />
                        <GradientStop Offset="0.6" Color="#FF5A6DCD" />
                        <GradientStop Offset="1" Color="#FF293262" />
                    </LinearGradientBrush>
                </Label.Background>

            </Label>
            <Button x:Name="BackBtn1"
                    Grid.Row="0"
                    Width="35"
                    Height="30"
                    Margin="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="{x:Null}"
                    Click="BackBtn1_Click"
                    Content="Back"
                    Foreground="#FFABA4A4"
                    RenderTransformOrigin="-0.012,0.467" />

            <Grid x:Name="ZGrd"
