<Window x:Class="QuickSales.LogInScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log On"
        Width="304"
        Height="1114"
        MinWidth="300"
        AllowsTransparency="True"
        BorderThickness="4"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4" />
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black" />
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="4" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="MinWidth" Value="75" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Window.Resources>

    <Window.BorderBrush>
        <RadialGradientBrush>
            <GradientStop Offset="0" Color="#FF404070" />
            <GradientStop Offset="1" Color="#55000000" />
        </RadialGradientBrush>
    </Window.BorderBrush>

    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition x:Name="LoginRow" Height="169" />
            <RowDefinition x:Name="OptionsRow" Height="169" />
            <RowDefinition x:Name="OpenDrawerRow" Height="169" />
            <RowDefinition x:Name="CloseDrawerRow" Height="450" />
            <RowDefinition x:Name="UserOptionsRow" Height="169" />

        </Grid.RowDefinitions>
        <Grid x:Name="LoginScreen">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                <Label HorizontalAlignment="Stretch"
                       HorizontalContentAlignment="Center"
                       Content="Log On"
                       FontFamily="Calibri"
                       FontSize="16"
                       FontWeight="Normal"
                       Foreground="#FFD3D9EE">
                    <Label.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Offset="0" Color="#FF293262" />
                            <GradientStop Offset="0.4" Color="#FF5A6DCD" />
                            <GradientStop Offset="0.6" Color="#FF5A6DCD" />
                            <GradientStop Offset="1" Color="#FF293262" />
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <Border Height="5">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Offset="0" Color="#FF525252" />
                            <GradientStop Offset="1" Color="#00FFFFFF" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </StackPanel>


            <Label Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   Content="User Name" />
            <TextBox x:Name="xUsername"
                     Grid.Row="1"
                     Grid.Column="1"
                     GotFocus="DoCredentialsFocussed" />
            <Label Grid.Row="2"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   Content="Password" />
            <PasswordBox x:Name="xPassword"
                         Grid.Row="2"
                         Grid.Column="1"
                         GotFocus="DoCredentialsFocussed" />

            <Label Grid.Row="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Content="Enter admin/pass as credentials"
                   FontStyle="Italic"
                   Foreground="Gray"
                   Visibility="{Binding HintVisibility}" />

            <StackPanel Grid.Row="4"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Height="Auto"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                <Button Click="DoLogonClick"
                        Content="Log-on"
                        IsDefault="True" />
                <Button Content="Cancel" IsCancel="True" />
            </StackPanel>

        </Grid>

        <Grid x:Name="OptionsGrd" Grid.Row="1">
            <Button x:Name="OpenDrawerBtn"
                    Width="80"
                    Height="30"
                    Margin="25,43,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="OpenDrawerBtn_Click"
                    Content="Open Drawer"
                    Foreground="Black" />
            <Button x:Name="CloseDrawerBtn"
                    Width="80"
                    Height="30"
                    Margin="110,43,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="CloseDrawerBtn_Click"
                    Content="Close Drawer"
                    Foreground="Black" />
            <Button x:Name="OptionsContinueBtn"
                    Width="80"
                    Height="30"
                    Margin="95,129,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="Continue_Click_1"
                    Content="Continue..."
                    Foreground="Black" />
            <Button x:Name="UserOptionsBtn"
                    Width="80"
                    Height="30"
                    Margin="195,43,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="UserOptionsBtn_Click"
                    Content="User Settings"
                    Foreground="Black" />
            <TextBlock x:Name="StatusTxt"
                       Width="250"
                       Height="38"
                       Margin="25,86,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="Welcome"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
            <StackPanel Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,134.47">
                <Label HorizontalAlignment="Stretch"
                       HorizontalContentAlignment="Center"
                       Content="Next Steps"
                       FontFamily="Calibri"
                       FontSize="16"
                       FontWeight="Normal"
                       Foreground="#FFD3D9EE">
                    <Label.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Offset="0" Color="#FF293262" />
                            <GradientStop Offset="0.4" Color="#FF5A6DCD" />
                            <GradientStop Offset="0.6" Color="#FF5A6DCD" />
                            <GradientStop Offset="1" Color="#FF293262" />
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <Border Height="5">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Offset="0" Color="#FF525252" />
                            <GradientStop Offset="1" Color="#00FFFFFF" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </StackPanel>

        </Grid>

        <Grid x:Name="OpenDrawerGrd" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="57*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="82*" />
            </Grid.RowDefinitions>
            <Label Margin="0,0,0,27"
                   HorizontalAlignment="Stretch"
                   HorizontalContentAlignment="Center"
                   Content="Open Drawer"
                   FontFamily="Calibri"
                   FontSize="16"
                   FontWeight="Normal"
                   Foreground="#FFD3D9EE">
                <Label.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Offset="0" Color="#FF293262" />
                        <GradientStop Offset="0.4" Color="#FF5A6DCD" />
                        <GradientStop Offset="0.6" Color="#FF5A6DCD" />
                        <GradientStop Offset="1" Color="#FF293262" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <TextBox x:Name="OpeningAmountTxt"
                     Width="115"
                     Height="22"
                     Margin="124,35,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Text="{Binding OpeningCash,
                                    StringFormat=c,
                                    ValidatesOnDataErrors=True}"
                     TextWrapping="Wrap" />
            <TextBlock Width="100"
                       Height="22"
                       Margin="10,35,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="Opening Cash"
                       TextWrapping="Wrap" />
            <TextBlock Grid.Row="1"
                       Width="229"
                       Height="22"
                       Margin="10,6,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="{Binding OpeningTime,
                                      StringFormat=Opening Time: {0:M/d/yyyy h:mm:ss tt},
                                      ValidatesOnDataErrors=True}"
                       TextWrapping="Wrap" />
            <Button Grid.Row="2"
                    Width="80"
                    Height="30"
                    Margin="200,42,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="Continue_Click_1"
                    Content="Continue..."
                    Foreground="Black" />
            <TextBlock Grid.Row="2"
                       Width="229"
                       Height="22"
                       Margin="10,5,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="{Binding BatchId,
                                      StringFormat=BatchId: 0}"
                       TextWrapping="Wrap" />
            <Button x:Name="CreateBatchBtn"
                    Grid.Row="2"
                    Width="80"
                    Height="30"
                    Margin="112,42,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="CreateBatchBtn_Click_1"
                    Content="Open Drawer"
                    Foreground="Black" />
            <TextBlock Grid.Row="2"
                       Width="90"
                       Height="39"
                       Margin="10,33,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="16"
                       Text="{Binding Status}"
                       TextWrapping="Wrap" />

        </Grid>
        <Grid x:Name="CloseDrawerGrd" Grid.Row="3">
