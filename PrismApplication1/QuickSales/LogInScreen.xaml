                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Total Sales:"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="14"
                           Grid.Column="1"
                           Width="150"
                           Height="23"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="{Binding TotalSalesEx,
                                          StringFormat=\{0:c\}}"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Row="15"
                           Width="75"
                           Height="18"
                           Margin="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Total Tender:"
